# This tmux statusbar config was created by tmuxline.vim
# on Thu, 11 Oct 2018

set -g status-justify "left"
set -g status "on"

set -g pane-border-style fg="colour240"
set -g pane-active-border-style fg="colour254"

set -g message-style bg="colour35",fg="colour231"
set -g message-command-style bg="colour35",fg="colour231"

set -g status-style bg="colour234"

set -g status-left-length "100"
set -g status-left "#[fg=colour16,bg=colour254,bold] #S #[fg=colour254,bg=colour234,nobold,nounderscore,noitalics]"

set -g status-right-length "100"
set -g status-right "#[fg=colour236,bg=colour234,nobold,nounderscore,noitalics]#[fg=colour247,bg=colour236] %Y-%m-%d  %H:%M #[fg=colour252,bg=colour236,nobold,nounderscore,noitalics]#[fg=colour235,bg=colour252] #h "

setw -g window-status-activity-style bg="colour234","none",fg="colour250"
setw -g window-status-separator ""
setw -g window-status-style fg="colour250","none",bg="colour234"
setw -g window-status-format "#[fg=colour244,bg=colour234] #I #[fg=colour250,bg=colour234] #W "
setw -g window-status-current-format "#[fg=colour234,bg=colour35,nobold,nounderscore,noitalics]#[fg=colour0,bg=colour35] #I #[fg=colour231,bg=colour35,bold] #W #[fg=colour35,bg=colour234,nobold,nounderscore,noitalics]"

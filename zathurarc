map = zoom in
map + zoom default 

map j navigate next
map k navigate previous
map J scroll down
map K scroll up

map \`0 feedkeys ":blist 0<Return>"
map \`1 feedkeys ":blist 1<Return>"
map \`2 feedkeys ":blist 2<Return>"
map \`3 feedkeys ":blist 3<Return>"
map \`4 feedkeys ":blist 4<Return>"
map \`5 feedkeys ":blist 5<Return>"

map <C-a> feedkeys ":exec okular %<Return>"

map @ feedkeys ":set first-page-column 1:2<Return>"
map \# feedkeys ":set first-page-column 1:1<Return>"

# hide statusbar by default
set guioptions "" 

# background color
set default-bg "#303030"

# set first page of document as the window icon
set window-icon-document "true"

set statusbar-basename "true"
set window-title-basename "true"
set window-title-page "true"
